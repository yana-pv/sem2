<Window x:Class="exploding_kittens.Dialogs.TargetSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:exploding_kittens.Dialogs"
        Title="Выберите цель" 
        WindowStyle="ToolWindow"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MinWidth="300"
        MinHeight="250">

    <Window.Resources>
        <local:BoolToCurrentPlayerConverter x:Key="BoolToCurrentPlayerConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Выберите игрока:" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Список игроков -->
        <ListBox x:Name="PlayersListBox"
                 Grid.Row="1"
                 MaxHeight="200"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" 
                                   Margin="5"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding CardCount, StringFormat='({0} карт)'}"
                                   Foreground="Gray"
                                   Margin="5,0"/>
                        <TextBlock Text="{Binding IsCurrentPlayer, Converter={StaticResource BoolToCurrentPlayerConverter}}"
                                   Foreground="Green"
                                   Margin="5,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    Width="80"/>
            <Button Content="Выбрать"
                    Click="SelectButton_Click"
                    Padding="15,5"
                    Width="80"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>