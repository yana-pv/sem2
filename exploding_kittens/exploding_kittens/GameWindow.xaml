<Window x:Class="exploding_kittens.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Взрывные Котята - Игра"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#0c2461">

    <Grid>
        <Rectangle Fill="#0c2461"/>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    Background="#FFFFFFE6"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            CornerRadius="10"
                            Padding="12,8"
                            HorizontalAlignment="Left"
                            Background="#06D6A0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎮" FontSize="18" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="ТЕКУЩИЙ ХОД" 
                                           FontSize="11" 
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="CurrentPlayerLabel"
                                           Text="Игрок1"
                                           FontSize="14"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            HorizontalAlignment="Center"
                            CornerRadius="10"
                            Padding="12,8"
                            Background="#FF6A11">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏱" FontSize="18" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="ОСТАЛОСЬ ВРЕМЕНИ" 
                                           FontSize="11" 
                                           Foreground="White"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="TimerLabel"
                                           Text="00:30"
                                           FontSize="20"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Инфа -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border CornerRadius="10"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                Background="#4a148c">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="ИГРОКОВ" 
                                               FontSize="11" 
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="PlayersCountLabel"
                                               Text="4"
                                               FontSize="14"
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левый игрок -->
                <Border x:Name="LeftPlayerPanel"
                        Grid.Column="0"
                        Background="#FFFFFFE6"
                        CornerRadius="15"
                        Margin="10"
                        Padding="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="220"
                        Visibility="Visible">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" 
                                    CornerRadius="20"
                                    Background="#06D6A0"
                                    Margin="0,0,10,0">
                                <TextBlock Text="😼" 
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="LeftPlayerName"
                                           Text="Игрок3"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="3 карты"
                                           FontSize="11"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="TopPlayerPanel"
                            Grid.Row="0"
                            Background="#FFFFFFE6"
                            CornerRadius="15"
                            Margin="0,0,0,15"
                            Padding="15"
                            HorizontalAlignment="Center"
                            Width="280"
                            Visibility="Visible">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Width="40" Height="40" 
                                        CornerRadius="20"
                                        Background="#FF6A11"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="👑" 
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="TopPlayerName"
                                               Text="Игрок2"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="5 карт"
                                               FontSize="11"
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <WrapPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                <Border Width="35" Height="49" 
                                        CornerRadius="5"
                                        Margin="1"
                                        BorderBrush="#4a148c"
                                        BorderThickness="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="35" Height="49" 
                                        CornerRadius="5"
                                        Margin="1"
                                        BorderBrush="#4a148c"
                                        BorderThickness="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="35" Height="49" 
                                        CornerRadius="5"
                                        Margin="1"
                                        BorderBrush="#4a148c"
                                        BorderThickness="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="35" Height="49" 
                                        CornerRadius="5"
                                        Margin="1"
                                        BorderBrush="#4a148c"
                                        BorderThickness="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                                <Border Width="35" Height="49" 
                                        CornerRadius="5"
                                        Margin="1"
                                        BorderBrush="#4a148c"
                                        BorderThickness="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="🃏 КОЛОДА" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Grid Width="150" Height="210" HorizontalAlignment="Center">
                                <Border CornerRadius="15"
                                        BorderBrush="#FFD166"
                                        BorderThickness="4"
                                        Cursor="Hand">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/Shirt.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                                <Border 
                                        Margin="4"/>
                                <TextBlock Text="20"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top" Margin="0,146,0,0"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="🗑️ СБРОС" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Grid Width="150" Height="210" HorizontalAlignment="Center">
                                <Border Width="150" Height="210"
                                        CornerRadius="15"
                                        BorderThickness="4" Margin="3,-1,-3,1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="photo/skip1.png" 
                                                    Stretch="Fill"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2"
                            Background="#FFFFFFE6"
                            CornerRadius="15"
                            Margin="0,20,0,0"
                            Padding="15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                <TextBlock Text="🎴 " FontSize="18"/>
                                <TextBlock Text="ВАШИ КАРТЫ" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#4a148c"/>
                                <Border Background="#FF6A11" 
                                        CornerRadius="8"
                                        Padding="6,3"
                                        Margin="10,0,0,0">
                                    <TextBlock Text="5 шт."
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled"
                                          Height="180">
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Width="120" Height="168"
                                            Margin="8"
                                            Cursor="Hand">
                                        <Border.Background>
                                            <ImageBrush ImageSource="photo/attack1.png" 
                                                        Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>

                                    <Border Width="120" Height="168"
                                            Margin="8"
                                            Cursor="Hand">
                                        <Border.Background>
                                            <ImageBrush ImageSource="photo/skip1.png" 
                                                        Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>

                                    <Border Width="120" Height="168"
                                            Margin="8"
                                            Cursor="Hand">
                                        <Border.Background>
                                            <ImageBrush ImageSource="photo/defuse1.png" 
                                                        Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>

                                    <Border Width="120" Height="168"
                                            Margin="8"
                                            Cursor="Hand">
                                        <Border.Background>
                                            <ImageBrush ImageSource="photo/rainbowcat.png" 
                                                        Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <Border Width="120" Height="168"
                                            Margin="8"
                                            Cursor="Hand">
                                        <Border.Background>
                                            <ImageBrush ImageSource="photo/attack2.png" 
                                                        Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                </WrapPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
                <Border x:Name="RightPlayerPanel"
                        Grid.Column="2"
                        Background="#FFFFFFE6"
                        CornerRadius="15"
                        Margin="10"
                        Padding="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="220"
                        Visibility="Visible">
                    <StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" 
                                    CornerRadius="20"
                                    Background="#FF4500"
                                    Margin="0,0,10,0">
                                <TextBlock Text="😺" 
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="RightPlayerName"
                                           Text="Игрок4"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="7 карт"
                                           FontSize="11"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                            <Border Width="35" Height="49" 
                                    CornerRadius="5"
                                    Margin="1"
                                    BorderBrush="#4a148c"
                                    BorderThickness="2">
                                <Border.Background>
                                    <ImageBrush ImageSource="photo/Shirt.png" 
                                                Stretch="Fill"/>
                                </Border.Background>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2"
                    Background="#FFFFFFE6"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="DrawCardButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#06D6A0" Offset="0"/>
                                <GradientStop Color="#0ABF8F" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🎴" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ВЗЯТЬ КАРТУ"/>
                        </StackPanel>
                    </Button>

                    <!-- Сыграть карту -->
                    <Button x:Name="PlayCardButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#4a148c" Offset="0"/>
                                <GradientStop Color="#6a24bc" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="▶️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="СЫГРАТЬ КАРТУ"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="EndTurnButton"
                            Width="160" Height="45"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6A11" Offset="0"/>
                                <GradientStop Color="#FF8A31" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⏭️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ЗАВЕРШИТЬ ХОД"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ExitButton"
                            Width="120" Height="45"
                            Background="#666666"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="10,0,0,0"
                            Click="ExitButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🚪" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="В МЕНЮ"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>