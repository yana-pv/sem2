<Window x:Class="ClientWPF.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лобби - Взрывные Котята"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#8B0000">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8B0000" Offset="0"/>
                    <GradientStop Color="#DC143C" Offset="0.5"/>
                    <GradientStop Color="#FF4500" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Width="734" Height="500"
                CornerRadius="20"
                Background="White"
                Opacity="0.98"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FF6A11"
                BorderThickness="2">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="🎮" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="ВЫБЕРИТЕ ДЕЙСТВИЕ"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#DC143C" HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding PlayerName, StringFormat='Игрок: {0}'}"
                               FontSize="16" Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <Border Height="3" Width="200" Background="#FF6A11" 
                            HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Кнопки выбора -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="350">
                    <!-- Создать игру -->
                    <Button x:Name="CreateGameButton"
                            Content="СОЗДАТЬ ИГРУ"
                            Width="300" Height="80"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="18" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20"
                            Click="CreateGameButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                <StackPanel Orientation="Vertical" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="🎲" FontSize="24"/>
                                                    <ContentPresenter Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45a049"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Присоединиться к игре -->
                    <Button x:Name="JoinGameButton"
                            Content="ПРИСОЕДИНИТЬСЯ"
                            Width="300" Height="80"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="18" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20"
                            Click="JoinGameButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="12">
                                                <StackPanel Orientation="Vertical" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="👥" FontSize="24"/>
                                                    <ContentPresenter Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Статус -->
                    <Border x:Name="StatusPanel" 
                            Background="#FFF3CD" 
                            CornerRadius="8" 
                            Padding="12" 
                            Margin="0,20,0,0"
                            BorderBrush="#FFEEBA"
                            BorderThickness="1"
                            Visibility="Collapsed">
                        <TextBlock x:Name="StatusText" 
                                   Text="" 
                                   Foreground="#856404"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>

                <!-- Кнопка назад -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BackButton"
                            Content="НАЗАД"
                            Width="150" Height="45"
                            Background="#6c757d"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5a6268"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>