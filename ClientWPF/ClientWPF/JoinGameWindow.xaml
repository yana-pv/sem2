<Window x:Class="ClientWPF.JoinGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Присоединение к игре - Взрывные Котята"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#8B0000">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8B0000" Offset="0"/>
                    <GradientStop Color="#DC143C" Offset="0.5"/>
                    <GradientStop Color="#FF4500" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Width="900" Height="700"
                CornerRadius="20"
                Background="White"
                Opacity="0.98"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FF6A11"
                BorderThickness="2">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="👥" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="ПРИСОЕДИНЕНИЕ К ИГРЕ"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#DC143C" HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding PlayerName, StringFormat='Игрок: {0}'}"
                               FontSize="16" Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <Border Height="3" Width="250" Background="#FF6A11" 
                            HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Список игр и панель ввода ID -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Список доступных игр -->
                    <Border Grid.Column="0" 
                            Margin="0,0,15,0"
                            BorderBrush="#E9ECEF"
                            BorderThickness="1"
                            CornerRadius="12"
                            Background="#F8F9FA">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Заголовок списка -->
                            <Border Grid.Row="0" 
                                    Background="#2196F3" 
                                    CornerRadius="12,12,0,0"
                                    Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="ДОСТУПНЫЕ ИГРЫ" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="White"/>
                                    <TextBlock x:Name="GamesCountText" 
                                               Text=" (0)" 
                                               FontSize="16"
                                               Foreground="White"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Список игр -->
                            <ListView x:Name="GamesListView" 
                                      Grid.Row="1"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      SelectionChanged="GamesListView_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                CornerRadius="8" 
                Margin="10,5"
                Padding="15"
                BorderBrush="#E9ECEF"
                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                               FontSize="16" FontWeight="Bold"
                               Foreground="#333"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="👤 " Foreground="#666"/>
                                                        <TextBlock Text="{Binding PlayersCount}" Foreground="#666"/>
                                                        <TextBlock Text="/" Foreground="#666"/>
                                                        <TextBlock Text="{Binding MaxPlayers}" Foreground="#666"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Status}" 
                               FontSize="12"
                               Foreground="#999"
                               Margin="0,5,0,0"/>
                                                    <TextBlock Text="{Binding CreatorName, StringFormat='Создатель: {0}'}" 
                               FontSize="11"
                               Foreground="#CCC"
                               Margin="0,5,0,0"/>
                                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" 
                               FontSize="11"
                               Foreground="#CCC"
                               Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <Button Grid.Column="1"
                        Content="ПРИСОЕДИНИТЬСЯ"
                        Width="120" Height="35"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="12" FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Tag="{Binding Id}"
                        IsEnabled="{Binding CanJoin}"
                        Click="JoinGameItemButton_Click">
                                                    <Button.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="6"/>
                                                        </Style>
                                                    </Button.Resources>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Кнопка обновления -->
                            <Border Grid.Row="2" 
                                    Background="#F1F3F4" 
                                    CornerRadius="0,0,12,12"
                                    Padding="10">
                                <Button x:Name="RefreshButton"
                                        Content="🔄 ОБНОВИТЬ СПИСОК"
                                        Width="200" Height="40"
                                        Background="#6c757d"
                                        Foreground="White"
                                        FontSize="14" FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="RefreshButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Панель ввода ID вручную -->
                    <Border Grid.Column="1" 
                            BorderBrush="#E9ECEF"
                            BorderThickness="1"
                            CornerRadius="12"
                            Background="#F8F9FA"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="⚡ БЫСТРОЕ ПОДКЛЮЧЕНИЕ" 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="#333"
                                       Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Введите ID игры" FontSize="14" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="GameIdTextBox" 
                                         FontSize="14" Padding="12" 
                                         Background="White" 
                                         BorderThickness="2" 
                                         BorderBrush="#E9ECEF"
                                         Foreground="#212529"
                                         Cursor="IBeam">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

                            <Button x:Name="JoinByIdButton"
        Content="ПОДКЛЮЧИТЬСЯ ПО ID"
        Width="260" 
        Height="45"
        Background="#2196F3"
        Foreground="White"
        FontSize="16" 
        FontWeight="Bold"
        BorderThickness="0"
        Cursor="Hand"
        Margin="0,0,0,20"
        Click="JoinByIdButton_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Статус -->
                            <Border x:Name="StatusPanel" 
                                    Background="#FFF3CD" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,10,0,0"
                                    BorderBrush="#FFEEBA"
                                    BorderThickness="1"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="StatusText" 
                                           Text="" 
                                           Foreground="#856404"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Панель ожидания -->
                            <Border x:Name="WaitingPanel" 
                                    Background="#E3F2FD" 
                                    CornerRadius="12" 
                                    Padding="20"
                                    Margin="0,20,0,0"
                                    BorderBrush="#BBDEFB"
                                    BorderThickness="2"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <!-- Анимация загрузки -->
                                    <Border Width="40" Height="40" 
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,10">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                            From="0" To="360" Duration="0:0:1.5"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Border.RenderTransform>
                                            <RotateTransform CenterX="20" CenterY="20"/>
                                        </Border.RenderTransform>
                                        <Ellipse Stroke="#2196F3" StrokeThickness="3">
                                            <Ellipse.StrokeDashArray>
                                                <DoubleCollection>0.2, 0.8</DoubleCollection>
                                            </Ellipse.StrokeDashArray>
                                        </Ellipse>
                                    </Border>

                                    <TextBlock Text="ПОДКЛЮЧЕНИЕ..." 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="#1976D2"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock x:Name="WaitingStatusText" 
                                               Text="Подключаемся к игре..." 
                                               FontSize="14"
                                               Foreground="#0D47A1"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               Margin="0,10,0,0"/>

                                    <Button x:Name="CancelJoinButton"
                                            Content="ОТМЕНИТЬ"
                                            Width="120" Height="35"
                                            Background="#f44336"
                                            Foreground="White"
                                            FontSize="14" FontWeight="Bold"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Margin="0,15,0,0"
                                            Click="CancelJoinButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Сообщения -->
                            <Border x:Name="MessagesPanel" 
                                    Background="#F8F9FA" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,20,0,0"
                                    BorderBrush="#E9ECEF"
                                    BorderThickness="1"
                                    Visibility="Collapsed">
                                <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="MessagesText" 
                                               Text="" 
                                               Foreground="#666"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Кнопка назад -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BackButton"
                            Content="← НАЗАД В ЛОББИ"
                            Width="180" Height="40"
                            Background="#6c757d"
                            Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>