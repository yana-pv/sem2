<Window x:Class="ClientWPF.CreateGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание игры - Взрывные Котята"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#8B0000">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8B0000" Offset="0"/>
                    <GradientStop Color="#DC143C" Offset="0.5"/>
                    <GradientStop Color="#FF4500" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Width="734" Height="600"
                CornerRadius="20"
                Background="White"
                Opacity="0.98"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FF6A11"
                BorderThickness="2">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="🎲" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="СОЗДАНИЕ ИГРЫ"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#DC143C" HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding PlayerName, StringFormat='Создатель: {0}'}"
                               FontSize="16" Foreground="#666"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <Border Height="3" Width="200" Background="#FF6A11" 
                            HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Настройки игры -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="350">
                    <!-- Количество игроков -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Количество игроков" FontSize="14" 
                                   Foreground="#444" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox x:Name="PlayersComboBox" FontSize="14" Padding="12" 
                                  Background="#F8F9FA" 
                                  BorderThickness="2" 
                                  BorderBrush="#E9ECEF"
                                  Foreground="#212529"
                                  SelectedIndex="0">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="2 игрока" Tag="2"/>
                            <ComboBoxItem Content="3 игрока" Tag="3"/>
                            <ComboBoxItem Content="4 игрока" Tag="4"/>
                            <ComboBoxItem Content="5 игроков" Tag="5"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Название комнаты -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Название комнаты (необязательно)" 
                                   FontSize="14" 
                                   Foreground="#444" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox x:Name="RoomNameTextBox" Text="" 
                                 FontSize="14" Padding="12" 
                                 Background="#F8F9FA" 
                                 BorderThickness="2" 
                                 BorderBrush="#E9ECEF"
                                 Foreground="#212529"
                                 Cursor="IBeam"
                                 TextChanged="RoomNameTextBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock x:Name="RoomNameCounter" 
                                   Text="0/30" 
                                   FontSize="12" 
                                   Foreground="#999"
                                   HorizontalAlignment="Right"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- ID игры (будет сгенерирован) -->
                    <StackPanel Margin="0,0,0,25" x:Name="GameIdPanel" Visibility="Collapsed">
                        <TextBlock Text="ID игры для приглашения" 
                                   FontSize="14" 
                                   Foreground="#444" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Background="#E8F5E9" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    BorderBrush="#C8E6C9"
                                    BorderThickness="1">
                                <TextBlock x:Name="GameIdText" 
                                           Text="Ожидание создания..." 
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"
                                           TextWrapping="Wrap"/>
                            </Border>
                            <Button x:Name="CopyIdButton" 
                                    Grid.Column="1"
                                    Content="📋"
                                    Width="40" Height="40"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="16"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="10,0,0,0"
                                    Click="CopyIdButton_Click"
                                    ToolTip="Копировать ID">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                        <TextBlock Text="Отправьте этот ID другим игрокам для подключения" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Статус ожидания игроков -->
                    <Border x:Name="WaitingPanel" 
                            Background="#E3F2FD" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,20,0,0"
                            BorderBrush="#BBDEFB"
                            BorderThickness="2"
                            Visibility="Collapsed">
                        <StackPanel>
                            <!-- Анимация загрузки -->
                            <Border Width="50" Height="50" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,15">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                    From="0" To="360" Duration="0:0:2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <Border.RenderTransform>
                                    <RotateTransform CenterX="25" CenterY="25"/>
                                </Border.RenderTransform>
                                <Ellipse Stroke="#2196F3" StrokeThickness="3">
                                    <Ellipse.StrokeDashArray>
                                        <DoubleCollection>0.2, 0.8</DoubleCollection>
                                    </Ellipse.StrokeDashArray>
                                </Ellipse>
                            </Border>

                            <TextBlock Text="ОЖИДАНИЕ ИГРОКОВ..." 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="#1976D2"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <TextBlock x:Name="WaitingStatusText" 
                                       Text="Ожидаем подключения игроков..." 
                                       FontSize="14"
                                       Foreground="#0D47A1"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>

                            <ProgressBar x:Name="WaitingProgress" 
                                         Height="10" 
                                         Margin="0,15,0,0"
                                         Foreground="#2196F3"
                                         IsIndeterminate="True"/>

                            <TextBlock x:Name="PlayersCountText" 
                                       Text="Игроков: 1/5" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="#1565C0"
                                       HorizontalAlignment="Center"
                                       Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Сообщения -->
                    <Border x:Name="MessagesPanel" 
                            Background="#FFF3CD" 
                            CornerRadius="8" 
                            Padding="12" 
                            Margin="0,20,0,0"
                            BorderBrush="#FFEEBA"
                            BorderThickness="1"
                            Visibility="Collapsed">
                        <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="MessagesText" 
                                       Text="" 
                                       Foreground="#856404"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Кнопка создания -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="CreateButton"
                            Content="СОЗДАТЬ ИГРУ"
                            Width="200" Height="50"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,15,0"
                            Click="CreateButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45a049"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="StartButton"
                            Content="НАЧАТЬ ИГРУ"
                            Width="200" Height="50"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,15,0"
                            Click="StartButton_Click"
                            IsEnabled="False"
                            Visibility="Collapsed">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="CancelButton"
                            Content="ОТМЕНА"
                            Width="120" Height="50"
                            Background="#f44336"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CancelButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- Кнопка назад -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BackButton"
                            Content="← НАЗАД В ЛОББИ"
                            Width="180" Height="40"
                            Background="#6c757d"
                            Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>