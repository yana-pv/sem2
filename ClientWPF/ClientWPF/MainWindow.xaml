<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Взрывные Котята"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#8B0000">

    <Grid x:Name="MainContainer">
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8B0000" Offset="0"/>
                    <GradientStop Color="#DC143C" Offset="0.5"/>
                    <GradientStop Color="#FF4500" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Width="734" Height="551"
                CornerRadius="20"
                Background="White"
                Opacity="0.98"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FF6A11"
                BorderThickness="2">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="💥" FontSize="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="ВЗРЫВНЫЕ КОТЯТА"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#DC143C" HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <Border Height="3" Width="200" Background="#FF6A11" 
                            HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="350">
                    <!-- Адрес сервера -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="IP-адрес сервера" FontSize="14" 
                                   Foreground="#444" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="IpTextBox" Text="127.0.0.1" 
                                     FontSize="14" Padding="12" 
                                     Background="#F8F9FA" 
                                     BorderThickness="2" 
                                     BorderBrush="#E9ECEF"
                                     Foreground="#212529"
                                     Grid.Column="0"
                                     Margin="0,0,10,0">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox x:Name="PortTextBox" Text="5001" 
                                     FontSize="14" Padding="12" 
                                     Background="#F8F9FA" 
                                     BorderThickness="2" 
                                     BorderBrush="#E9ECEF"
                                     Foreground="#212529"
                                     Grid.Column="1">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </StackPanel>

                    <!-- Никнейм -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Никнейм игрока" FontSize="14" 
                                   Foreground="#444" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox x:Name="NicknameTextBox" Text="" 
                                 FontSize="14" Padding="12" 
                                 Background="#F8F9FA" 
                                 BorderThickness="2" 
                                 BorderBrush="#E9ECEF"
                                 Foreground="#212529"
                                 Cursor="IBeam">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Статус подключения -->
                    <StackPanel x:Name="StatusPanel" Visibility="Collapsed">
                        <Border Background="#E8F5E9" 
                                CornerRadius="8" 
                                Padding="12" 
                                Margin="0,0,0,10"
                                BorderBrush="#C8E6C9"
                                BorderThickness="1">
                            <TextBlock x:Name="StatusText" 
                                       Text="Подключение..." 
                                       Foreground="#2E7D32"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="ConnectButton"
                            Content="ПОДКЛЮЧИТЬСЯ"
                            Width="180" Height="45"
                            Background="#DC143C"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,15,0"
                            Click="ConnectButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B22222"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#8B0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ExitButton"
                            Content="ВЫЙТИ"
                            Width="100" Height="45"
                            Background="#FF4500"
                            Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ExitButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6347"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF4500"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>